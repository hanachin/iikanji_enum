<p id="notice"><%= notice %></p>

<h1>Published Posts</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>State</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @published_posts.each do |published_post| %>
      <tr>
        <td><%= published_post.type %></td>
        <td><%= published_post.state %></td>
        <td><%= published_post.title %></td>
        <td><%= published_post.body %></td>
        <td><%= link_to 'Show', published_post %></td>
        <td><%= link_to 'Edit', edit_published_post_path(published_post) %></td>
        <td><%= link_to 'Destroy', published_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Published Post', new_published_post_path %>
