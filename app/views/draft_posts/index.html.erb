<p id="notice"><%= notice %></p>

<h1>Draft Posts</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>State</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @draft_posts.each do |draft_post| %>
      <tr>
        <td><%= draft_post.type %></td>
        <td><%= draft_post.state %></td>
        <td><%= draft_post.title %></td>
        <td><%= draft_post.body %></td>
        <td><%= link_to 'Show', draft_post %></td>
        <td><%= link_to 'Edit', edit_draft_post_path(draft_post) %></td>
        <td><%= link_to 'Destroy', draft_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Draft Post', new_draft_post_path %>
